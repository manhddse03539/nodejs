extends ./layouts/common

block content
    if errors
        each error in errors
            .alert.alert-danger.mt-5= error
    form.mt-5(method='POST')
        .form-group
            label(for='email') Email
            input#email.form-control(name='email' type='text' placeholder='Enter email' value= values ? values.email : '')
            small#emailHelp.form-text.text-muted We&apos;ll never share your info with anyone else.
        .form-group
            label(for='password') Password
            input#password.form-control(name='password' type='password' value= values ? values.password : '')
        button.btn.btn-primary(type='submit') Login
