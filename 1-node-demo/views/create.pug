extends ./layouts/common

block content
    if errors
        each error in errors
            .alert.alert-danger.mt-5= error
    form.mt-5(action='/users/create', method='POST' enctype="multipart/form-data")
        .form-group
            label(for='name') Name
            input#name.form-control(name='name' type='text', placeholder='Enter name' value= values ? values.name : '')
            small#emailHelp.form-text.text-muted We&apos;ll never share your info with anyone else.
        .form-group
            label(for='class') Class
            input#class.form-control(name='class' type='text', placeholder='Enter class name' value= values ? values.class : '')
        .form-group
            label(for='avatar') Avatar
            input#class.form-control-file(name='avatar' type='file')
        button.btn.btn-primary(type='submit') Add

